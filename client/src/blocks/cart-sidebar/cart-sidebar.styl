@import "../light-input/light-input.styl"
@import "../cart-entry/cart-entry.styl"

$bl = 'cart-sidebar';

.ui.left.sidebar,
.ui.right.sidebar
  width 560px
  background-color #fff

.{$bl}
  display flex
  flex-flow column
  &__informations
    flex 1
    padding 35px 35px 20px 35px

  &__cart-contents
    flex 1
    background-color #f2f9fd
    padding 0px 35px 20px 35px

  &__header
    font-family $font-din-pro-cond
    font-size 30px
    font-weight 500

  &__title
    font-family $font-din-pro-cond
    font-size 15px
    font-weight 500
    padding-top 20px
    letter-spacing 0.8px

  &__input-row
    display flex
    margin 10px 0
    justify-content space-between

  &__items-list
    padding-left 0
    list-style none
    border-top 1px solid  #e4e4e4
    border-bottom 1px solid #e4e4e4

  &__product-row
    display table
    width 100%

    & + &
      border-top 1px solid  #e4e4e4

  &__resume
    display table
    width 200px
    float right
    font-family $font-din-pro-cond
    font-weight 500

  &__resume-row
    line-height 30px
    display table-row

  &__clause
    text-align left
    display table-cell

  &__cost
    text-align right
    display table-cell

  &__agreement
    clear both
    padding-top 20px
    font-family $font-roboto
    font-weight 300
    font-size 15px

  &__confirmation
    padding-top 20px
    text-align right 

.flex-input
  flex 1
  & + &
    margin-left 20px

  &_half-once
    margin-right 20px
    flex 0.5



