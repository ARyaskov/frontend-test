@import "../../../helpers/mixins.styl"

$bl = 'select2-container'

.{$bl}
  display inline-block
  height: 45px;

  & .select2-selection--single
    outline none
    border-radius 0
    height 45px

    & .select2-selection__rendered
      line-height 45px
      padding-left 15px

    & .select2-selection__arrow
      top 0px
      bottom 0px
      margin auto